<script>
    function div_hide() {
        $("#PayerMasterHeader").removeClass("panel panel-orange").addClass("hidden");
        $("#add_new").removeClass("hidden").addClass("panel panel-orange  ");
    }
    function div_back() {
        $("#add_new").removeClass("panel panel-orange").addClass("hidden");
        $("#PayerMasterHeader").removeClass("hidden").addClass("panel panel-orange");
    }
    function insert_row(tableid, elem) {
        var x = dynTableRow(elem);
        dynTableCloneRow(tableid, x);
        var table = document.getElementById('dyn_table');
        for (var i = 0; i < table.rows.length - 1; i++) {
            var psmServiceName = dynTableGetNodeInRow(table.rows[i + 1], 'psmServiceName').value;
            var psmDiscountPercent = dynTableGetNodeInRow(table.rows[i + 1], 'psmDiscountPercent').value;
        }
        if (psmServiceName == "") {
            alert("Enter Service Name");
            return false;
        } else if (psmDiscountPercent == "" || parseInt(psmDiscountPercent) == 0) {
            alert("Enter Discount Percentage");
            return false;
        }
        else {
            var newRow = dynTableAppendRow(tableid);
            dynTableGetNodeInRow(newRow, "psmId").value = "";
            dynTableGetNodeInRow(newRow, "psmPdRid").value = "";
            dynTableGetNodeInRow(newRow, "psmServiceRid").value = "";
            dynTableGetNodeInRow(newRow, "psmServiceName").value = "";
            dynTableGetNodeInRow(newRow, "psmServiceCost").value = 0;
            dynTableGetNodeInRow(newRow, "psmServiceGroup").value = 0;
            dynTableGetNodeInRow(newRow, "psmDiscountPercent").value = 0;
            dynTableGetNodeInRow(newRow, "psmDiscountVal").value = 0;
            dynTableGetNodeInRow(newRow, "psmDiscountPrice").value = 0;
            dynTableGetNodeInRow(newRow, "minus").className = 'ace-icon fa fa-minus';
            dcomethealth.PayerMaster.serviceAutoComplete();
        }
    }
    function delete_row(elem) {
        var x = dynTableRow(elem);
        var table = document.getElementById('dyn_table');
        var table_length = table.rows.length;
        for (var i = 0; i < table_length - 1; i++) {
            if (table_length > 2) {
                dynTableDeleteRow(x);
            }
        }
    }
    function calculation(row) {
        var itemname = dynTableGetNodeInRow(row, 'psmServiceName').value;
        var mrp = dynTableGetNodeInRow(row, 'psmServiceCost').value;
        var qty_row = dynTableGetNodeInRow(row, 'qtyService').value;
        if (qty_row == "") {
            alert("Enter Qty");
            return false;
        }
        else if (parseInt(qty_row) <= 0) {
            alert("Enter Positive Qty");
            dynTableGetNodeInRow(row, 'qtyService').value = 1;
            return false;
        }
        if (itemname != "") {
            if (parseInt(mrp) != 0) {
                if (parseInt(qty_row) != 0) {
                    var table = document.getElementById('dyn_table');
                    var table_length = table.rows.length;
                    for (var i = 0; i < table_length - 1; i++) {

                        var mrp = dynTableGetNodeInRow(table.rows[i + 1], 'psmServiceCost').value;
                        var qty_row = dynTableGetNodeInRow(table.rows[i + 1], 'qtyService').value;
                        var psmDiscountPercent = dynTableGetNodeInRow(table.rows[i + 1], 'psmDiscountPercent').value;

                        if (parseFloat(psmDiscountPercent) != 0) {
                            var disAmnt = (psmDiscountPercent / 100) * mrp;
                            var disPrice = parseFloat(mrp) - parseInt(disAmnt);
                            dynTableGetNodeInRow(table.rows[i + 1], 'psmDiscountVal').value = disAmnt;
                            dynTableGetNodeInRow(table.rows[i + 1], 'psmDiscountPrice').value = disPrice;
                        }
                    }
                }
            }
        }
    }
</script>
